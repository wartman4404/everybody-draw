local positions = {}
local indexes = {}
local active = 0
function ondown(a)
  for i = 1,4 do
    if positions[i] == nil then
      positions[i] = {x = a.x, y = a.y}
      positions[i].size = 2
      positions[i].counter = a.counter
      indexes[a.counter] = i
      loglua("added " .. a.counter .. " as point " .. i)
      active = active + 1
      break
    end
  end
  default_ondown(a)
end
function onup(a)
  local idx = indexes[a]
  if idx ~= nil then
    loglua("pointer " .. "a" .. " lifted; removed point " .. idx)
    positions[idx] = nil
    active = active - 1
    savelayers()
  end
  default_onup(a)
end
function onmove(a, b)
  local idx = indexes[b.counter]
  if idx ~= nil then
    positions[idx].x = b.x
    positions[idx].y = b.y
  end
end
function onframe(x, y)
  if active < 4 then return end
  out1 = ShaderPaintPoint(positions[1])
  out2 = ShaderPaintPoint(positions[2])
  out3 = ShaderPaintPoint(positions[3])
  out4 = ShaderPaintPoint(positions[4])
  loglua("pushing cubic bezier points!")
  pushcubicbezier(1, out1, out2, out3, out4)
end

