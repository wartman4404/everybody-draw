<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gldrawfromscratch.MainActivity" >

    <RelativeLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/textureviewframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ViewFlipper
            android:id="@+id/controlflipper"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:background="#fff" >

            <GridView
                android:id="@+id/brushpicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/animpicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/paintpicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/interppicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/unipicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />
        </ViewFlipper>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sidebar_parent"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#eee" >

        <ListView
            android:id="@+id/control_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#eee"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />

        <LinearLayout
            android:id="@+id/undo_redo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/control_drawer" >

            <Button
                android:id="@+id/undo_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&lt;" />

            <Button
                android:id="@+id/redo_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=">" />
        </LinearLayout>

        <com.larswerkman.holocolorpicker.ColorPicker
            android:id="@+id/brush_colorpicker_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/undo_redo_layout" />

        <com.larswerkman.holocolorpicker.SVBar
            android:id="@+id/brush_colorpicker_svbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brush_colorpicker_main" />

        <com.larswerkman.holocolorpicker.ScaleBar
            android:id="@+id/brush_colorpicker_scalebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brush_colorpicker_svbar" />

        <Button
            android:id="@+id/load_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Load" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/load_button"
            android:text="Save" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/save_button"
            android:layout_marginBottom="15dp"
            android:text="Clear" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
