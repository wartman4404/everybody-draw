<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gldrawfromscratch.MainActivity" >

    <RelativeLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/textureviewframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ViewFlipper
            android:id="@+id/controlflipper"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#fff"
            android:layout_alignParentBottom="true" >

            <GridView
                android:id="@+id/brushpicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/animpicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/paintpicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/interppicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />

            <GridView
                android:id="@+id/unipicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:columnWidth="120dp"
                android:numColumns="auto_fit" />
        </ViewFlipper>
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="240dp"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:background="#eee"
      android:id="@+id/sidebar_parent">
      <ListView
          android:id="@+id/control_drawer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:choiceMode="singleChoice"
          android:background="#eee"
          android:divider="@android:color/transparent"
          android:layout_alignParentTop="true"
          android:dividerHeight="0dp" />
          <LinearLayout
              android:id="@+id/undo_redo_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/control_drawer">
              <Button
                  android:id="@+id/undo_button"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="&lt;"
                  android:layout_weight="1"/>
              <Button
                  android:id="@+id/redo_button"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="&gt;"
                  android:layout_weight="1"/>
          </LinearLayout>

  </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
